#!/usr/bin/env bash
export CACHE_DIR="${XDG_CACHE_DIR:-$HOME/.cache}/bookmarks"
export CACHE_ROFI="$CACHE_DIR/rofi"

if which notify-system > /dev/null; then
    notify="notify-system"
else
    notify="notify-send"
fi

bindings=(
	-kb-custom-1 Alt+e
	-kb-custom-2 Alt+c
	-kb-custom-3 Alt+r
)
mesg="<b>${bindings[1]}</b>: edit, <b>${bindings[3]}</b>: clip, <b>${bindings[5]}</b>: remove"

#TODO:
# set -e

open() {
	bookmark open "$1"
}

clip() {
	bookmark clip "$1" && $notify "URL of $1 copied to clipboard." && sleep 1
}

edit() {
	export BOOKMARK="$1"
	"$TERMINAL" -e sh -c 'bookmark edit "$BOOKMARK"'
}

remove() {
	bookmark delete "$1" && $notify "$1 deleted."
}

on_rofi_exit() {
	if [ -n "$1" ]; then
		for bookmark in $bookmarks; do
			case "$1" in
				0)  open "$bookmark";;
				10) edit "$bookmark";;
				11) clip "$bookmark";;
				12) remove "$bookmark";;
				*) echo "invalid bookmark: $bookmark" && exit 1;;
			esac
		done
	fi
}

case "$1" in
	download) shift; rofi-bookmark-download.py "$@"; exit ;;
	*) ;;
esac

bookmark="$(rofi -dmenu -multi-select -show-icons -p Name -i -mesg "$mesg" ${bindings[@]} < "$CACHE_ROFI")"

on_rofi_exit "$?" "$bookmark"
